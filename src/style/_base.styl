body
  font-family 'Lato',"Helvetica Neue",Helvetica,Arial,sans-serif
  font-size 16px
  font-weight 400
  color $grey
  user-select none
  a
    text-decoration none
    color $pink
  .left
    float left
  .right
    float right
  .reset-input
    border none
    padding 0
    margin 0
    cursor pointer
    &:focus
      outline 0
  section
    padding 0 8px
    max-width 600px;
    margin auto
    margin-bottom 7em
